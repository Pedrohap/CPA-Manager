<%- include('layouts/header'); -%>
<%- include('layouts/navbar'); -%>
<%- include('layouts/modal'); -%>
<%- include('layouts/modal-confirm'); -%>

<div class="container">
    <h1 class="display-6 mb-3">Cadastro de Aluno</h1>

    <div class="row">
        <div class="col-md-2">

        </div>

        <div class="col-md-8">
            <div class="row mb-3">
                <div class="col-md-3">
                    <label for="idBusca" class="form-label">Matricula</label>
                    <input type="number" class="form-control" id="idBusca">
                </div>
                <div class="col-md-9 position-relative">
                    <label for="nomeBusca" class="form-label">Nome</label>
                    <input type="text" class="form-control" id="nomeBusca" >
                    <span style="position: absolute; width: 100%; padding-right: 24px; display: none;" id="sugestionTable" class="col-md-9">
                        <table id="nomeBuscaTable" class="table table-hover table-sm table-borderless">
                            <thead>
                              <tr>
                                <th scope="col">Codigo</th>
                                <th scope="col">Nome</th>
                              </tr>
                            </thead>
                            <tbody id="nomeBuscaAutoFill">
                            </tbody>
                          </table>
                    </span>
                </div>     
            </div>

            <div class="row">
                <div class="col-auto">
                    <div class="btn-group" role="group">
                        <input type="radio" class="btn-check" name="btnRadio" id="btnNovo" autocomplete="off" >
                        <label class="btn btn-outline-primary" for="btnNovo">Novo</label>
                    
                        <input type="radio" class="btn-check" name="btnRadio" id="btnEditar" autocomplete="off" disabled>
                        <label class="btn btn-outline-primary" for="btnEditar">Editar</label>

                        <input type="radio" class="btn-check" name="btnRadio" id="btnExcluir" autocomplete="off" disabled>
                        <label class="btn btn-outline-danger" for="btnExcluir">Excluir</label>
                    </div>
                </div>
            </div>
            <form id="createAlunoForm">
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label for="id" class="form-label">CÃ³digo Pessoa</label>
                        <input type="text" class="form-control" id="id" disabled>
                    </div>
                    <div class="col-md-7">
                        <label for="nome" class="form-label">Nome Completo</label>
                        <input type="text" class="form-control" id="nome" disabled required>
                    </div>
                    <div class="col-md-3">
                        <label for="sexo" class="form-label">Sexo</label>
                        <select class="form-select" id = "sexo" disabled required>
                            <option value="M" selected>Masculino</option>
                            <option value="F">Feminino</option>
                        </select>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-2">
                        <label for="idAluno" class="form-label">Matricula</label>
                        <input type="text" class="form-control" id="idAluno" disabled>
                    </div>
                    <div class="col-md-2">
                        <label for="siglaCurso" class="form-label">Sigla Curso</label>
                        <input type="text" class="form-control" id="siglaCurso" disabled>
                    </div>
                    <div class="col-md-4">
                        <label for="curso" class="form-label">Curso</label>
                        <input type="text" class="form-control" id="curso" disabled>
                    </div>
                    <div class="col-md-2">
                        <label for="curriculo" class="form-label">Curriculo</label>
                        <select type="text" class="form-select" id="curriculo" disabled>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label for="serie" class="form-label">Serie</label>
                        <input type="number" class="form-control" id="serie" disabled>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4">
                        <label for="cpf" class="form-label">CPF</label>
                        <input type="text" class="form-control" id="cpf" disabled required>
                    </div>
                    <div class="col-md-5">
                        <label for="email" class="form-label">E-Mail</label>
                        <input type="email" class="form-control" id="email" disabled required>
                    </div>
                    <div class="col-md-3">
                        <label for="data_nascimento" class="form-label">Data de Nascimento</label>
                        <input type="date" class="form-control" id="data_nascimento" disabled required>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="senha" class="form-label">Senha</label>
                        <input type="password" class="form-control" id="senha" disabled>
                    </div>
                    <div class="col-md-6">
                        <label for="senhaConf" class="form-label">Confirmar Senha</label>
                        <input type="password" class="form-control" id="senhaConf" disabled>
                    </div>
                </div>

                <div class="row">
                    <div class="d-grid gap-2 d-md-block">
                        <input type="text" id="formAction" hidden>
                        <button type="button" style="display: none;" class="btn btn-primary" id="btnCancelar">Cancelar</button>
                        <button type="submit" style="display: none;" class="btn btn-primary" id="btnSalvar">Salvar</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-2">
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js" integrity="sha512-pHVGpX7F/27yZ0ISY+VVjyULApbDlD0/X0rgGbTqCE7WFW5MezNTWG/dnhtbBuICzsd0WQPgpE4REBLv+UqChw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="/javascripts/form_script.js"></script>
<script src="/javascripts/cadastro_aluno.js"></script>

<%- include('layouts/footer'); -%>