<%- include('layouts/header'); -%>
<%- include('layouts/navbar'); -%>
<%- include('layouts/modal'); -%>
<%- include('layouts/modal-confirm'); -%>

<div class="container">
    <h1 class="display-6 mb-3">Cadastro de Turma</h1>

    <div class="row">
        <div class="col-md-2">

        </div>

        <div class="col-md-8">
            <div class="row mb-3">
                <div class="col-md-3">
                    <label for="idBusca" class="form-label">ID Turma</label>
                    <input type="number" class="form-control" id="idBusca">
                </div>
                <div class="col-md-9 position-relative">
                    <label for="nomeBusca" class="form-label">Nome</label>
                    <input type="text" class="form-control" id="nomeBusca" >
                    <span style="position: absolute; width: 100%; padding-right: 24px; display: none;" id="sugestionTable" class="col-md-9">
                        <table id="nomeBuscaTable" class="table table-hover table-sm table-borderless">
                            <thead>
                              <tr>
                                <th scope="col">Codigo</th>
                                <th scope="col">Nome</th>
                              </tr>
                            </thead>
                            <tbody id="nomeBuscaAutoFill">
                            </tbody>
                          </table>
                    </span>
                </div>     
            </div>

            <div class="row">
                <div class="col-auto">
                    <div class="btn-group" role="group">
                        <input type="radio" class="btn-check" name="btnRadio" id="btnNovo" autocomplete="off" >
                        <label class="btn btn-outline-primary" for="btnNovo">Novo</label>
                    
                        <input type="radio" class="btn-check" name="btnRadio" id="btnEditar" autocomplete="off" disabled>
                        <label class="btn btn-outline-primary" for="btnEditar">Editar</label>

                        <input type="radio" class="btn-check" name="btnRadio" id="btnExcluir" autocomplete="off" disabled>
                        <label class="btn btn-outline-danger" for="btnExcluir">Excluir</label>
                    </div>
                </div>
            </div>
            <form id="createTurmaForm">
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label for="id" class="form-label">ID Turma</label>
                        <input type="text" class="form-control" id="id" disabled>
                    </div>
                    <div class="col-md-6">
                        <label for="nome" class="form-label">Nome da Turma</label>
                        <input type="text" class="form-control" id="nome" disabled required>
                    </div>
                    <div class="col-md-2">
                        <label for="ano" class="form-label">Ano</label>
                        <input type="number" class="form-control" id="ano" disabled required>
                    </div>
                    <div class="col-md-2">
                        <label for="semestre" class="form-label">Semestre</label>
                        <input type="number" class="form-control" id="semestre" disabled required>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-2">
                        <label for="idDocente" class="form-label">Cod. Docente</label>
                        <input type="number" class="form-control" id="idDocente" required disabled>
                    </div>
                    <div class="col-md-4">
                        <label for="nomeDocente" class="form-label">Nome Docente</label>
                        <input type="text" class="form-control" id="nomeDocente" disabled>
                        <span style="position: absolute; padding-right: 24px; display: none;" id="sugestionTableDocente" class="col-md-4">
                            <table id="nomeDocenteBuscaTable" class="table table-hover table-sm table-borderless">
                                <thead>
                                  <tr>
                                    <th scope="col">Codigo</th>
                                    <th scope="col">Nome</th>
                                  </tr>
                                </thead>
                                <tbody id="nomeDocenteBuscaAutoFill">
                                </tbody>
                              </table>
                        </span>
                    </div>
                    <div class="col-md-2">
                        <label for="idDiciplina" class="form-label">Cod. Disciplina</label>
                        <input type="number" class="form-control" id="idDiciplina" disabled>
                    </div>
                    <div class="col-md-4">
                        <label for="nomeDisciplina" class="form-label">Nome Disciplina</label>
                        <input type="text" class="form-control" id="nomeDisciplina" disabled>
                        <span style="position: absolute; padding-right: 24px; display: none;" id="sugestionTableDisciplina" class="col-md-4">
                            <table id="nomeDisciplinaBuscaTable" class="table table-hover table-sm table-borderless">
                                <thead>
                                <tr>
                                    <th scope="col">Codigo</th>
                                    <th scope="col">Nome</th>
                                </tr>
                                </thead>
                                <tbody id="nomeDisciplinaBuscaAutoFill">
                                </tbody>
                            </table>
                        </span>
                    </div>
                </div>

                <div class="row">
                    <div class="d-grid gap-2 d-md-block">
                        <input type="text" id="formAction" hidden>
                        <button type="button" style="display: none;" class="btn btn-primary" id="btnCancelar">Cancelar</button>
                        <button type="submit" style="display: none;" class="btn btn-primary" id="btnSalvar">Salvar</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-2">
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js" integrity="sha512-pHVGpX7F/27yZ0ISY+VVjyULApbDlD0/X0rgGbTqCE7WFW5MezNTWG/dnhtbBuICzsd0WQPgpE4REBLv+UqChw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src="/javascripts/form_script.js"></script>
<script src="/javascripts/cadastro_turma.js"></script>

<%- include('layouts/footer'); -%>